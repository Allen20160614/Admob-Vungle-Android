<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ad_rewarded"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/load"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="loadRewardedVideo"
        android:text="ad_load" />

    <Button
        android:id="@+id/show"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/load"
        android:layout_centerHorizontal="true"
        android:onClick="showRewardedVideo"
        android:enabled="false"
        android:text="ad_show" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="ad_interstitial"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/loadInterstitial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:onClick="loadInterstitial"
        android:text="ad_load" />

    <Button
        android:id="@+id/showInterstitial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadInterstitial"
        android:layout_centerHorizontal="true"
        android:onClick="showInterstitial"
        android:enabled="false"
        android:text="ad_show" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/show"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="ad_banner"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/loadBanner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_centerHorizontal="true"
        android:onClick="loadBanner"
        android:text="ad_load" />

    <Button
        android:id="@+id/showBanner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loadInterstitial"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="showBanner"
        android:text="ad_show" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_placement_id"></com.google.android.gms.ads.AdView>

</LinearLayout>
